.icon
  display: inline
  vertical-align: middle
  line-height: inherit
  &,
  &.is-normal
    width: 1.1875em
    height: 1.1875em

  &.is-green
    _icon-color: $green
  &.is-blue
    _icon-color: $blue
  &.is-red
    _icon-color: $red
  &.is-white
    _icon-color: $white
  &.is-black
    _icon-color: $black

  &.is-tiny
    width: $fontTiny
    height: $fontTiny

  &.is-small
    width: $fontSmall
    height: $fontSmall

  &.is-large
    width: $fontLarge
    height: $fontLarge

  &.is-massive
    width: $fontMassive
    height: $fontMassive
