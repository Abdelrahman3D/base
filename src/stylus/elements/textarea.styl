.textarea
    display: block
    padding: $padding
    border-radius: $borderRadius
    font-size: $font
    line-height: 1.2
    border: 2px solid $mainColor
    text-align: $startDir
    color: $mainColor
    margin-bottom: $margin
    resize: none
    width: 100%

    &:focus
        outline: 0
        border-color: $blue
