.textarea
  display: block
  margin-bottom: $margin
  padding: $padding
  min-width: 100%
  max-width: 100%
  border: $border solid $black
  border-radius: $borderRadius
  text-align: $startDir
  line-height: 1.2

  &:focus
    outline: 0
    border-color: $secondary

  /**
   * modiffers
   */
  generateSizes()

  &.is-black
    border-color: $black

  &.is-primary
    border-color: $primary

  &.is-secondary
    border-color: $secondary

  &.is-info
    border-color: $info

  &.is-success
    border-color: $success

  &.is-warning
    border-color: $warning

  &.is-danger
    border-color: $danger

  &.is-white
    border-color: $white

  &:disabled, &.is-disabled
    cursor: not-allowed
    background: $black
    color: $white
    border-color: $black

  &.is-disabled
    pointer-events: none

  &:focus
    outline: none
    border-color: $secondary