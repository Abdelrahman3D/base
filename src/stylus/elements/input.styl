.input
  margin-bottom: $margin
  padding: $padding multiple($padding, 1.5)
  width: 100%
  border: $border solid $black
  border-radius: $borderRadius
  -webkit-appearance: none
  -moz-appearance: none

  &-tag
    display: inline-flex
    padding: $padding multiple($padding, 1.5)
    border: $border solid $black
    border-radius: $borderRadius
    background-color: $black
    vertical-align: top
    text-align: center
    _icon-color: $white

    .icon:first-child:not(:last-child)
      margin-right: multiple($padding, (1 / 2))

    .icon:last-child:not(:first-child)
      margin-left: multiple($padding, (1 / 2))

    .icon:only-child
      margin: 0 multiple($padding, (-1 / 2))

    &.is-rounded
      border-radius: 10em

    &.is-black
      border-color: $black
      background-color: $black
      color: $black
      _icon-color: $black

    &.is-white
      border-color: $white
      background-color: $white
      color: $white
      _icon-color: $white

    &.is-primary
      border-color: $primary
      background-color: $primary
      color: $primary
      _icon-color: $primary

    &.is-secondary
      border-color: $secondary
      background-color: $secondary
      color: $secondary
      _icon-color: $secondary

    &.is-danger
      border-color: $danger
      background-color: $danger
      color: $danger
      _icon-color: $danger

    &.is-success
      border-color: $success
      background-color: $success
      color: $success
      _icon-color: $success

    &.is-info
      border-color: $info
      background-color: $info
      color: $info
      _icon-color: $info

    &.is-warning
      border-color: $warning
      background-color: $warning
      color: $warning
      _icon-color: $warning

    &.is-inverse
      background-color: transparent

    &:not(.is-inverse):not(.is-clean), .inputGroup:not(.is-inverse) >&:not(.is-clean)
      color: $white
      _icon-color: $white

    &.is-clean
      position: relative
      background-color: white
      _icon-color: $gray
      border-{$endDir}: 0
      margin-{$endDir}: -2px

    &.is-disabled
      opacity: 0.9
      cursor: not-allowed

    generateSizes()

  /**
   * modiffers
   */
  generateSizes()

  &.is-block
    width: 100%

  &.is-rounded
    border-width: unitRes(2, 4)
    border-radius: 10em

  &.is-black
    border-color: $black

  &.is-primary
    border-color: $primary

  &.is-secondary
    border-color: $secondary

  &.is-info
    border-color: $info

  &.is-success
    border-color: $success

  &.is-warning
    border-color: $warning

  &.is-danger
    border-color: $danger

  &.is-white
    border-color: $white

  &:disabled, &.is-disabled
    cursor: not-allowed
    background: $black
    color: $white
    border-color: $black

  &.is-disabled
    pointer-events: none

  &:focus
    outline: none
    border-color: $secondary