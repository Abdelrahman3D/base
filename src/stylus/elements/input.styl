.input
  margin-bottom: $margin
  padding: $padding multiple($padding, 1.5)
  width: 100%
  border: 2px solid $mainColor
  border-radius: $borderRadius
  -webkit-appearance: none
  -moz-appearance: none

  /**
    * modiffers
    */
  &.is-block
    width: 100%

  &,
  &.is-normal
    font-size: $font
  &.is-tiny
    font-size: $fontTiny
  &.is-small
    font-size: $fontSmall
  &.is-large
    font-size: $fontLarge
  &.is-massive
    font-size: $fontMassive

  &.is-rounded
    border-width: 2px
    border-radius: 10em

  &.is-black
    border-color: $black
  &.is-blue
    border-color: $blue
  &.is-green
    border-color: $green
  &.is-red
    border-color: $red
  &.is-white
    border-color: $white

  &.is-disabled,
  &[disabled]
    opacity: 0.5
    cursor: not-allowed

  &:focus
    outline: none
    border-color: $blue