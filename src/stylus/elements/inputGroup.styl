
.inputGroup
  display: flex
  margin-bottom: $margin
  generateSizes()

  >*:not(.inputGroup-label)
    margin-bottom: 0

  &-label
    flex: 1
    margin-bottom: $padding
    margin-{$dir-end}: $margin
    white-space: nowrap

  &.has-label
    flex-wrap: wrap

  &.has-labelInline
    align-items: center

  &.has-itemAfter
    .button
      border-top-{$dir-start}-radius: 0
      border-bottom-{$dir-start}-radius: 0
      border-{$dir-start}: 0

    .input
      border-top-{$dir-end}-radius: 0
      border-bottom-{$dir-end}-radius: 0

  &.has-itemBefore
    .input-tag
      border-top-{$dir-end}-radius: 0
      border-bottom-{$dir-end}-radius: 0
      border-{$dir-end}: 0

    .input
      border-top-{$dir-start}-radius: 0
      border-bottom-{$dir-start}-radius: 0

  // generate all modifiers
  for modifier in $modifiers
    &.is-{modifier}
      >.button
        @extend .button.is-{modifier} !optional

      >.input
        @extend .input.is-{modifier} !optional

      >.input-tag
        @extend .input-tag.is-{modifier} !optional