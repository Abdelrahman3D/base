/**
 * Device Breakpoint
 */
$mobile ?= 0
$tablet ?= 768px
$desktop ?= 991px
$widescreen ?= 1360px
$ultrawide ?= 1920px

/**
 * elemets sizes
 */
$size-tiny ?= getMinMax(12)
$size-small ?= getMinMax(14)
$size-normal ?= getMinMax(16)
$size-large ?= getMinMax(20)
$size-massive ?= getMinMax(24)


/**
 * typography
 */
$display-1 ?= getMinMax(68)
$display-2 ?= getMinMax(60)
$display-3 ?= getMinMax(52)
$display-4 ?= getMinMax(48)
$header-1 ?= getMinMax(40)
$header-2 ?= getMinMax(32)
$header-3 ?= getMinMax(28)
$header-4 ?= $size-massive
$header-5 ?= $size-large
$header-6 ?= $size-normal

$margin ?= 10px
$padding ?= 0.5em
$paddingPx ?= 20px
$modalSpacing ?= unitRes(20, 60)
$borderRadius ?= 0
$border ?= unitRes(2, 4)
$font-tiny ?= 12px
$font-small ?= 14px
$font ?= 16px
$font-large ?= 24px
$font-massive ?= 30px
$lineheight ?= 1.1875
$weight-default ?= 500
$weight-bold ?= 700
$weight-super ?= 900


/**
 * grid
 */
$columns ?= 12
$dir ?= ltr
$dir-start ?= setDirection('start')
$dir-end ?= setDirection('end')
$gutter = 1.5625vw
$gutter-full ?= 8vw
$container-mobile ?= calc(100% - 22px)
$container-tablet ?= $tablet - (22 * 2)
$container-desktop ?= $desktop - (22 * 3)
$container-widescreen ?= $widescreen - (22 * 4)
$container-ultrawide ?= $ultrawide - (22 * 5)
/**
 * Enable/Disable css variables
 */
$cssVar ?= false
$modifiers ?= 'block' 'tiny' 'small' 'normal' 'large' 'massive' 'rounded' 'black' 'inverse' 'disabled' 'primary' 'primary.is-inverse' 'secondary' 'secondary.is-inverse' 'info' 'info.is-inverse' 'success' 'success.is-inverse' 'warning' 'warning.is-inverse' 'danger' 'danger.is-inverse' 'white' 'white.is-inverse'
